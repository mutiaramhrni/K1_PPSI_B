<div class="wrapper-buat-kelas">
  <form action="/register" class="form-buat-kelas" method="post">
      <h5>Tambah User</h5>
        <div class="my-3">
            <input type="text" class="title fw-bold" name="id_user" placeholder="ID">
          </div>
        <div class="mb-3">
          <input type="text" class="title" name="username" placeholder="Username">
        </div>
        <div class="mb-3">
          <input type="password" class="title" name="password" placeholder=" Confirm password">
        </div>
        <div class="mb-3">
          <input type="password" class="title" name="confirm_password" placeholder="password">
        </div>
        <div class="mb-3">
          <select name="role" class="form-select" aria-label="Default select example">
            <option selected>Role</option>
            <option value="mahasiswa">Mahasiswa</option>
            <option value="dosen">Dosen</option>
          </select>
        </div>
      <div class="mt-3 con-btn">
        <a href="/dashboard" class="btn-cancel">Cancel</a>
        <button type="submit" class="btn-publish">Tambah</button>
      </div>
    </form>
</div>