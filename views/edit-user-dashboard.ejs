<div class="wrapper-buat-kelas">
  <form action="/edit-user-dashboard" class="form-buat-kelas" method="post">
      <h5>Edit User</h5>
        <div class="my-3">
            <input type="hidden" class="title" name="id_user" placeholder="ID" value="<%= user.id_user %>">
          </div>
        <div class="my-3">
            <input type="text" class="title" name="username" placeholder="Username" value="<%= user.username %>">
        </div>
        <div class="mb-3">
          <input type="text" class="title" name="role" placeholder="Role" value="<%= user.role %>">
        </div>
        <div class="mb-3">
          <input type="text" class="title" name="email" placeholder="Email" value="<%= user.email %>">
        </div>
      <div class="mt-3 con-btn">
        <a href="/dashboard" class="btn-cancel">Cancel</a>
        <button type="submit" class="btn-publish">Simpan</button>
      </div>
    </form>
</div>